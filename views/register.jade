//- This view defines the register form.

extends layout

append scripts
	script(src="js/register.js")
	script(src="js/jquery.validate.min.js")

block content

	if (errorSet == 1)
		| An error occured:
		br
		br
		ul
		each val, key in error
			li #{val}

	if (errorSet == 2)
		| An error occured: 
		if (userExists)
			| Username already exists.
		if (emailExists)
			| Email already exists.

	form(action="register", method="POST").well#registration_form
		legend #{title}
		.field#first
			label First Name
			input(name="first", placeholder="First Name", type="text")
		.field#last
			label Last Name
			input(name="last", placeholder="Last Name", type="text")
		.field#username	
			label Username
			input(name="username", placeholder="Username", type="text")
		.field#email
			label Email
			input(name="email", placeholder="Email", type="text")
		.field#pass
			label Password
			input(name="pass", placeholder="Password", type="password")#password
		.field#confirm_pass
			label Confirm Password
			input(name="confirm_pass", placeholder="Confirm Password", type="password")
		.field
			label
			button.btn(type="submit").btn-success Register